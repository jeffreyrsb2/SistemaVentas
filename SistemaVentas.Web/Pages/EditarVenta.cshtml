@page
@model SistemaVentas.Web.Pages.NuevaVentaModel
@{
    ViewData["Title"] = "Editar Venta";
}

<h1>Editar Venta</h1>

<div class="row">
    <div class="col-md-4">
        <div class="mb-3">
            <label for="select-cliente" class="form-label">Cliente</label>
            <select id="select-cliente" class="form-select"></select>
        </div>
        <div class="mb-3">
            <label for="select-producto" class="form-label">Añadir Producto</label>
            <select id="select-producto" class="form-select"></select>
        </div>
    </div>
    <div class="col-md-8">
        <h4>Detalle de Venta</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unit.</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tabla-detalle-venta">
                <!-- Filas de productos añadidos -->
            </tbody>
        </table>
        <h3 class="text-end">Total: <span id="total-venta">S/ 0.00</span></h3>
        <div class="d-flex justify-content-end mt-3">
            <a asp-page="/Ventas" class="btn btn-secondary me-2">Cancelar</a>
            <button id="btn-registrar-venta" class="btn btn-success">Registrar Venta</button>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/services/clienteService.js" asp-append-version="true"></script>
    <script src="~/js/editarVenta.js" asp-append-version="true"></script>
}
