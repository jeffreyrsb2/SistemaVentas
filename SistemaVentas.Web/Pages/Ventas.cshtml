@page
@model SistemaVentas.Web.Pages.VentasModel
@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestión de Ventas</h1>
    <a asp-page="/NuevaVenta" class="btn btn-primary">Nueva Venta</a>
</div>

<table id="tabla-ventas" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID Venta</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Vendedor</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>
@section Scripts {
    <script src="~/js/services/ventaService.js" asp-append-version="true"></script>
    <script src="~/js/ventas.js" asp-append-version="true"></script>
}
